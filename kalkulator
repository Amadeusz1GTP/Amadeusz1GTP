#include <iostream>
#include <math.h>
#include <cstdio>

using namespace std;

int liczbaX;
int liczbaY;
char kalkulator;


int main()
{
  std::cout<<"Podaj daną X: ";
    
	std::cin>>liczbaX;
    
	std::cout<<"Podaj daną Y: ";
    
	std::cin>>liczbaY;
    

	std::cout<<"Wybierz działanie : 1.dodawanie";
  std::cout<<"Wybierz działanie : 2.odejmowanie";
  std::cout<<"Wybierz działanie : 3.mnozenie";
  std::cout<<"Wybierz działanie : 4.dzielenie";
  std::cout<<"Wybierz działanie : 5.reszta z dzielenia ";
    

	std::cin>>kalkulator;


    switch(kalkulator)


    {
        case '1':
            std::cout<<"Suma: "<<liczbaX + liczbaY;
        break;

        case '2':
            std::cout<<"Roznica: "<<liczbaX - liczbaY;
        break;

        case '3':
            std::cout<<"Iloczyn: "<<liczbaX * liczbaY;
        break;

        case '4':
            std::cout<<"Iloraz: "<<liczbaX / liczbaY;
        break;

        case '5':
            std::cout<<"Reszta: "<<liczbaX % liczbaY;
        break;

        default: std::cout<<"Wybierz dzialanie ktore chcesz wykonac (numer od 1 do 5) ";  
    }

    return 0;
}
